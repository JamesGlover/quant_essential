<dl class="summary dl-horizontal">
<dt><%= Quant.human_attribute_name(:created_at) %></dt>
<dd><%= l(quant.created_at, format: :long) %></dd>
<dt><%= Quant.human_attribute_name(:user) %></dt>
<dd><%= quant.user.login %></dd>
<dt><%= Quant.human_attribute_name(:assay) %></dt>
<dd><%= link_to quant.assay_barcode, assay_path(quant.assay_barcode) %></dd>
<dt><%= Quant.human_attribute_name(:standard) %></dt>
<dd><%= link_to quant.standard_barcode, standard_path(quant.standard_barcode) %></dd>
<dt><%= Quant.human_attribute_name(:standard_age_at_creation) %></dt>
<dd>
  <%= pluralize(quant.standard_age_at_creation, t(:day)) %>
  <% if quant.standard_expired_at_creation? %>
    <span class="label label-danger"><%= t(:expired) %></span>
  <% end %>
</dd>
<dt><%= Quant.human_attribute_name(:input) %></dt>
<dd><%=  link_to quant.input.name, quant.input %> : <%= quant.input.external_type %> : <%= quant.input_barcode %></dd>
</dl>
